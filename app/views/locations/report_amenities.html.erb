<h1>Check In Amenity</h1>

<script id="google-location-template" type="text/x-handlebars-template">
 <div id="api-search-locations-checkin">
  {{#locations}}
  <div class="result-row" data-place_id="{{placeID}}">
    Name: {{name}}
    Vicinity: {{vicinity}}
  </div>

  {{/locations}}
 </div>
</script>
<div id="map-canvas"></div>

<div id="locals_list"></div>





<div class="new-location-form">

  <%= form_for @location do |f| %>
    <%= f.label 'Changing Stations' %>
    <%= f.check_box :changing_stations%>
    <%= f.label 'Nursing Stations' %>
    <%= f.check_box :nursing_stations%>
    <%= f.number_field :lng, class: 'text_field', step: 'any', hidden: "filler" %>
    <%= f.number_field :lat, class: 'text_field', step: 'any', hidden: "filler" %>
    <%= f.text_field :formatted_address, hidden: "filler"%>
    <%= f.text_field :formatted_phone_number, hidden: "filler"%>
    <%= f.submit 'Submit' %>
  <% end %>

</div>
