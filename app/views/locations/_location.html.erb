<div class="location-card mdl-card mdl-shadow--2dp demo-card-wide">
  <div class="mdl-card__title">
    <h2 class="mdl-card__title-text"><%= location.name %></h2>
  </div>
  <div class="mdl-card__supporting-text">
    <%= render partial: 'ratings', locals: {location: location} %>
    <%= render partial: 'heading', locals: {location: location} %>
  </div>
  <div class="mdl-card__actions mdl-card--border">
      <%= link_to "Leave a Review", new_location_review_path(@location), class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"%>
  </div>
  <div class="mdl-card__menu">
    <button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect">
      <i class="material-icons">share</i>
    </button>
  </div>
</div>



