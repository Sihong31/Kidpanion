<h2>Edit Location</h2>


<%= form_for @location do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name, value: @location.name %>
    <%= f.label :formatted_address %>
    <%= f.text_field :formatted_address, value: @location.formatted_address %>
    <%= f.label :formatted_phone_number %>
    <%= f.text_field :formatted_phone_number, value: @location.formatted_phone_number %>
  </div>

  <div>
    <%= f.label 'Changing Stations' %>
    <%= f.check_box :changing_stations, {checked: @location.changing_stations}%>
    <%= f.label 'Nursing Stations' %>
    <%= f.check_box :nursing_stations, {checked: @location.nursing_stations} %>
    <%= f.label 'Cribs' %>
    <%= f.check_box :cribs, {checked: @location.cribs} %>
    <%= f.label 'High Chairs' %>
    <%= f.check_box :high_chairs, {checked: @location.high_chairs} %>
    <%= f.label 'Family Restrooms' %>
    <%= f.check_box :family_restrooms, {checked: @location.family_restrooms} %>
    <%= f.label 'Restrooms' %>
    <%= f.check_box :restrooms, {checked: @location.restrooms} %>
    <%= f.label 'Play Area' %>
    <%= f.check_box :play_areas, {checked: @location.play_areas} %>
    <%= f.label 'Water Fountains' %>
    <%= f.check_box :water_fountains, {checked: @location.water_fountains} %>
  </div>

  <div>
    <%= f.submit %>
  </div>

<% end %>
